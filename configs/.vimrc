set nocompatible
colorscheme desert

if has('syntax')
	syntax on
endif

if has('filetype')
	filetype indent plugin on
endif

set wildmenu
set showcmd
set hlsearch


set ignorecase
set smartcase
set autoindent

if has('mouse')
  set mouse=a
endif

set number
set ruler

set shiftwidth=2
set softtabstop=2
set expandtab
